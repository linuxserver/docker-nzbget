#!/usr/bin/with-contenv bash

# delete lock file if found
[[ -f /downloads/nzbget.lock ]] && \
	rm /downloads/nzbget.lock

# check if config file exists in /config
[[ ! -f /config/nzbget.conf ]] && \
	cp /defaults/nzbget.conf /config/nzbget.conf

# permissions
chown abc:abc \
	/downloads
chown abc:abc -R \
	/app/nzbget \
	/config
chmod u+rw \
	/config/nzbget.conf
